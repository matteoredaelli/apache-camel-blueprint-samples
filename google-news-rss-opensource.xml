<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <camelContext id="google-news-opensource" xmlns="http://camel.apache.org/schema/blueprint">
    <!-- if you are behind a proxy, you need to start karaf process with -Dhttp.host= -->

    <route id="google-news-opensource">
<!--      <from uri="rss:https://news.google.com/?output=rss&amp;q=opensource&amp;alt=rss&amp;splitEntries=true&amp;consumer.delay=10000" />
-->
      <from uri="rss:https://news.google.com/?output=rss&amp;q=opensource" />
      <marshal> <rss/> </marshal>
      <setHeader headerName="google-news-id">
        <simple>opensource</simple>
      </setHeader>
      <to uri="log://tmp/" />
      <to uri="file://tmp/" />
    </route>

  </camelContext>
</blueprint>

